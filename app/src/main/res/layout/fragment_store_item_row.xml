<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        android:background="@color/background_color"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color">

            <ImageView
                android:id="@+id/offer_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/offer_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offer_image"
                android:lines="2"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:paddingTop="@dimen/card_title_padding"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/offer_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offer_companyName"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="@dimen/card_price_padding_bottom"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/offer_principal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offer_amount"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="@dimen/card_price_padding_bottom"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/offer_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offer_principal"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="@dimen/card_price_padding_bottom"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/offer_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offer_interest"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="@dimen/card_price_padding_bottom"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="11dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>